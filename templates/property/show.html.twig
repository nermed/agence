{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}
{% block title %} {{ property.title }} {% endblock %}
{% block body %}
    <div class="jumbotron">
        <div class="container">    
            <div class="row">
                <div class="col-md-8">
                    {% if property.filename %}
                        <img src="/images/properties/{{ property.filename }}" alt="card-img-top" style="width: 60%; height:auto;">
                    {% else %}
                        <img src="{{ '/images/properties/images.jpg' }}" alt="card-img-top" style="width: 60%; height: auto;">
                    {% endif %}
                </div>
                <div class="col-md-4">
                        <h1>{{ property.title }} </h1>
                        <h2> {{ property.rooms }} pièces - {{ property.surface }} m²</h2>
                    <div class="text-primary" style="font-size: 2rem; font-weight: bold"> {{ property.formattedPrice }} Fbu</div>
                        <a class="btn btn-primary" href="#">Contacter nous</a>
                        <div id="contactForm" class="mt-4">
                            {{ form_start(form) }}
                                <div class="row">
                                    <div class="col">{{ form_row(form.firstname) }}</div>
                                    <div class="col">{{ form_row(form.lastname) }}</div>
                                </div>
                                <div class="row">
                                    <div class="col">{{ form_row(form.phone) }}</div>
                                    <div class="col">{{ form_row(form.email) }}</div>
                                </div>
                                {{ form_rest(form) }}
                                <div class="form-group">
                                    <button class="btn btn-primary">Envoyer</button>
                                </div>
                            {{ form_end(form) }}
                        </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container mt-4">
        <p>
            {{ property.description | nl2br }}
        </p>
        <div class="row">
            <div class="col-md-8">
                <h2>Caracteristiques</h2>
                <div class="col-md-4">
                    <table class="table table-striped">
                        <tr>
                            <td>Surface: </td>
                            <td> {{ property.surface }} m²</td>
                        </tr>
                        <tr>
                            <td>Pièces</td>
                            <td> {{ property.rooms }} </td>
                        </tr>
                        <tr>
                            <td>Chambres</td>
                            <td> {{ property.bedrooms }} </td>
                        </tr>
                        <tr>
                            <td>Chauffages</td>
                            <td> {{ property.heatType }} </td>
                        </tr>
                    </table>
                </div>
            </div>
            <div class="col-md-4">
                <h2>Spécificités</h2>
                <ul class="list-group">
                    {% for option in property.options %}
                        <li class="list-group-item">
                            {{ option.name }}
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
   
{% endblock body %} 