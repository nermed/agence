{% extends 'base.html.twig' %}
{% block title %} {{ property.title }} {% endblock %}
{% block body %}
    <div class="jumbotron">
        <div class="container">    
        <div class="row">
            <div class="col-md-8">
    
            </div>
            <div class="col-md-4">
                <h1>{{ property.title }} </h1>
                <h2> {{ property.rooms }} pièces - {{ property.surface }} m²</h2>
                <div class="text-primary" style="font-size: 2rem; font-weight: bold"> {{ property.formattedPrice }} Fbu</div>
                <a class="btn btn-primary" href="#">Contacter nous</a>
            </div>
        </div>
        </div>
    </div>
    <div class="container mt-4">
        <p>
            {{ property.description | nl2br }}
        </p>
        <div class="row">
            <div class="col-md-8">
                <h2>Caracteristiques</h2>
                <div class="col-md-4">
                    <table class="table table-striped">
                        <tr>
                            <td>Surface Habitable</td>
                            <td> {{ property.surface }} m²</td>
                        </tr>
                        <tr>
                            <td>Pièces</td>
                            <td> {{ property.rooms }} </td>
                        </tr>
                        <tr>
                            <td>Chambres</td>
                            <td> {{ property.bedrooms }} </td>
                        </tr>
                        <tr>
                            <td>Chauffages</td>
                            <td> {{ property.heatType }} </td>
                        </tr>
                    </table>
                </div>
            </div>
            <div class="col-md-4">
                <h2>Spécificités</h2>
            </div>
        </div>
    </div>
   
{% endblock body %}